<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_redis"
    tools:context=".Fragment.DonateFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="40dp">
        <androidx.core.widget.NestedScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addfooddescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    android:hint="FOOD DESCRIPTION"
                    app:placeholderText="example: 10 Burger, 1kg Rice,Meat,Dal"
                    app:placeholderTextColor="@color/grey">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:paddingStart="10dp"
                        android:inputType="text"
                        android:maxLines="5"
                        android:enabled="true"
                        android:clickable="true"
                        android:textColor="@color/dark_blue"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addfoodprice"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:boxStrokeColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        app:hintTextColor="@color/colorPrimary"
                        android:hint="Approximate Price"
                        android:paddingRight="3dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:paddingStart="10dp"
                            android:inputType="number"
                            android:textColorHint="@color/grey"
                            android:enabled="true"
                            android:textColor="@color/dark_blue"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/noOfPeople"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:boxStrokeColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimary"
                        app:hintTextColor="@color/colorPrimary"
                        android:hint="No. of people"
                        android:paddingLeft="3dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:paddingStart="10dp"
                            android:inputType="number"
                            android:textColorHint="@color/grey"
                            android:enabled="true"
                            android:clickable="true"
                            android:textColor="@color/dark_blue"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextColor="@color/colorPrimary"
                    android:hint="Address">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:paddingStart="10dp"
                        android:inputType="text"
                        android:enabled="true"
                        android:textColor="@color/dark_blue"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PickUp Time"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/dark"
                    android:fontFamily="@font/rubik_medium"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/starttimestore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Add Food Image"
                        android:textSize="14dp"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/rubik"
                        android:text="(optional)"
                        android:textColor="@color/dark_blue"
                        android:textSize="14dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/itemfoodimage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:scaleType="center"
                    android:background="@color/white_redis"
                    android:src="@drawable/ic_add_image"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/white">
        <Button
            android:id="@+id/productaddbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate Food"/>
    </RelativeLayout>
</FrameLayout>